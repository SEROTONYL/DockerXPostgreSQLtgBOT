# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# CRITICAL: The ONLY chat where bot works
FLOOD_CHAT_ID=-1001234567890

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=botuser
DB_PASSWORD=securepassword123
DB_NAME=telegram_bot
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# ========================================
# APPLICATION CONFIGURATION
# ========================================
APP_ENV=development
APP_LOG_LEVEL=debug

# CRITICAL: Moscow timezone for streak resets
APP_TIMEZONE=Europe/Moscow

# ========================================
# ADMIN CONFIGURATION
# ========================================
# Generate with the included script: go run scripts/generate_hash.go your_password
ADMIN_PASSWORD_HASH=$argon2id$v=19$m=65536,t=3,p=2$c29tZXNhbHQxMjM$hash_here

# ========================================
# STREAK CONFIGURATION
# ========================================
STREAK_MESSAGES_NEED=50
STREAK_REMINDER_THRESHOLD=7
STREAK_INACTIVE_HOURS=10

# ========================================
# KARMA CONFIGURATION
# ========================================
KARMA_DAILY_LIMIT=2
KARMA_COOLDOWN_SAME_USER_HOURS=24

# ========================================
# CASINO CONFIGURATION
# ========================================
CASINO_SLOTS_BET=50
CASINO_INITIAL_RTP=96.00
CASINO_MIN_RTP=94.00
CASINO_MAX_RTP=98.00

# ========================================
# ECONOMY CONFIGURATION
# ========================================
ECONOMY_STARTING_BALANCE=0
ECONOMY_CURRENCY_NAME=пленки

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=1m

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_CASINO_ENABLED=true
FEATURE_KARMA_ENABLED=true
FEATURE_STREAKS_ENABLED=true
